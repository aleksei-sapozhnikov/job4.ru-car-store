<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:mem:todolist</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"/>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.show_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- List of Annotations-mapping classes -->
        <mapping class="carstore.model.car.Age"/>
        <mapping class="carstore.model.car.Body"/>
        <mapping class="carstore.model.car.Car"/>
        <mapping class="carstore.model.car.Chassis"/>
        <mapping class="carstore.model.car.Engine"/>
        <mapping class="carstore.model.car.Mark"/>

        <mapping class="carstore.model.Image"/>
        <mapping class="carstore.model.User"/>

    </session-factory>
</hibernate-configuration>